<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/grey_21"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <LinearLayout
            android:id="@+id/llTab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab1"
                android:layout_width="@dimen/tab_bar_img_height"
                android:layout_height="@dimen/tab_bar_img_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/tab_bar_img_margin_bottom"
                android:scaleType="fitCenter"
                android:src="@mipmap/tab_coach" />

            <TextView
                android:id="@+id/tvTab1"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:gravity="center"
                android:text="@string/COACH"
                android:textColor="@color/grey_af"
                android:textSize="@dimen/tab_bar_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_bar_item"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab2"
                android:layout_width="@dimen/tab_bar_img_height"
                android:layout_height="@dimen/tab_bar_img_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/tab_bar_img_margin_bottom"
                android:scaleType="fitCenter"
                android:src="@mipmap/tab_premium" />

            <TextView
                android:id="@+id/tvTab2"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:gravity="center"
                android:text="@string/PREMIUM"
                android:textColor="@color/grey_af"
                android:textSize="@dimen/tab_bar_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_bar_item"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab3"
                android:layout_width="@dimen/tab_bar_img_width"
                android:layout_height="@dimen/tab_bar_img_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/tab_bar_img_margin_bottom"
                android:scaleType="fitCenter"
                android:src="@mipmap/tab_profile" />

            <TextView
                android:id="@+id/tvTab3"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:gravity="center"
                android:text="@string/PROFILE"
                android:textColor="@color/grey_af"
                android:textSize="@dimen/tab_bar_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTab4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_bar_item"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab4"
                android:layout_width="@dimen/tab_bar_img_height"
                android:layout_height="@dimen/tab_bar_img_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/tab_bar_img_margin_bottom"
                android:scaleType="fitCenter"
                android:src="@mipmap/tab_feed" />

            <TextView
                android:id="@+id/tvTab4"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:gravity="center"
                android:text="@string/FEED"
                android:textColor="@color/grey_af"
                android:textSize="@dimen/tab_bar_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
